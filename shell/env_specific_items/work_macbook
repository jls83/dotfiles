# vim: syntax=sh

source ~/.bash_profile

export PATH="/usr/local/opt/mysql@5.7/bin:$PATH"
export ZSH="/Users/jls83/.oh-my-zsh"

# PyEnv junk
export PATH="/Users/jls83/.pyenv:$PATH"
eval "$(pyenv init -)"

# Haskell junk
export PATH="/Users/jls83/.ghcup/bin:$PATH"

alias npr=prFunc
alias vgs=openVgShell
alias vgt=openVgTmux
alias wcp=maccopy

# YCharts-specific aliases
alias vg='cd /sites/ycharts && vagrant ssh bionic'
alias ycs='cd /sites/ycharts'
# I'm sure I will regret this, but you know.
alias gitr='git checkout develop && git pull origin develop'

# Set up a list of Git repos when the shell starts
if [[ -n $TMUX ]]; then
    YCHARTS_GIT_REPOSITORIES=$(find \
        /sites \
        -type d -name ".git" \
        ! -path "*/.git/*" \
        -prune \
        -maxdepth 4 | \
        sed -e 's/.\{4\}$//')

    OTHER_GIT_REPOSITORIES=$(find \
        ~/other_projects \
        -type d -name ".git" \
        ! -path "*/.git/*" \
        -prune \
        -maxdepth 4 | \
        sed -e 's/.\{4\}$//')

    GIT_REPOSITORIES="${YCHARTS_GIT_REPOSITORIES}\n${OTHER_GIT_REPOSITORIES}"
fi

