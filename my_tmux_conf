set -g default-terminal "screen-256color"
set -ga terminal-overrides ",xterm-256color*:Tc"

# Color vars
STATUS_FG=colour137
STATUS_BG=colour233
STATUS_RIGHT_FG=colour208
STATUS_RIGHT_BG=colour235

WINDOW_TAB_BG=colour236
WINDOW_TAB_FG=colour166
WINDOW_TAB_NAME_FG=colour255
WINDOW_TAB_FLAG_FG=colour249

WINDOW_TAB_ACTIVE_BG=colour255
WINDOW_TAB_ACTIVE_FG=colour166
WINDOW_TAB_ACTIVE_NAME_FG=colour234
WINDOW_TAB_ACTIVE_FLAG_FG=colour255

WINDOW_TAB_BELL_FG=colour255
WINDOW_TAB_BELL_BG=colour1

COPY_MODE_FG=colour1
COPY_MODE_BG=colour18

PANE_BORDER_FG=colour0
PANE_BORDER_BG=colour8
PANE_ACTIVE_BORDER_FG=colour166
PANE_ACTIVE_BORDER_BG=colour233

# Split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# Reload config
bind r source-file ~/.tmux.conf

# Don't rename windows automatically if I've manually set
set-option -g allow-rename off

# Copy mode
setw -g mode-keys vi
setw -g mode-style 'fg=colour1 bg=colour18'

# VISUAL JUNK
# Panes
set -g pane-border-style 'fg=colour8 bg=colour0'
set -g pane-active-border-style 'fg=colour166 bg=colour233'

# Statusbar
set -g status-position bottom
set -g status-justify left
set -g status-style 'bg=colour233 fg=colour137'

set -g status-left ''
set -g status-left-length 1
set -g status-right '#[fg=colour208,bg=colour235] %Y-%m-%d %H:%M:%S '
set -g status-right-length 60

setw -g window-status-current-style 'fg=colour255 bg=colour166 bold'
setw -g window-status-current-format ' #I: #[fg=colour234]#W#[fg=colour255]#F '

setw -g window-status-style 'fg=colour166 bg=colour236'
setw -g window-status-format ' #I: #[fg=colour255]#W#[fg=colour249]#F '

setw -g window-status-bell-style 'fg=colour255 bg=colour1 bold'

